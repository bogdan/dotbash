[core]
    ignorecase = true
    editor = nvim
    excludesfile = /Users/bogdan/.gitignore
    ; pager = ([[ -n $LESS ]] && less -iR ) || delta --dark
[diff]
    color = true
[alias]
    ci = commit
    st = status -u
    pl = pull
    ps = push
    co = checkout
    lg = log -p
    lg = log --pretty=tformat:'%Cred%h%Creset - %Cgreen(%an %cr)%Creset\t%C(yellow)%d%Creset%s' --abbrev-commit --date=relative
    wtf = !git-wtf

[merge]
    tool = nvimdiff

[log]
    color = true
    stat = true
    p = true

[user]
	email = agresso@gmail.com
	name = Bogdan Gusiev
[giggle]
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
	history-view-vpane-position = 406
	main-window-view = HistoryView
	file-view-vpane-position = 621
[push]
  default = matching
    statusHints = false
[github]
  user = bogdan
[grep]
  lineNumber = true


